#include <stdio.h>
#include <math.h>

int main() {
	double x;
	double eps;
	printf("Enter x, eps:\n");
	double rez = scanf("%lf%lf", &x, &eps);
	double summa = 1;
	double ch = 1;
	int n = 1;
	if (rez == 2) {
		double y2 = cos(x);
		
		while (fabs(ch) > eps) {
			ch *= ((-1) * x * x) / ((2 * n) * (2 * n - 1));
			summa += ch;
			n++;
		}

		printf("Cos Taylor: %lf\n", summa);
		printf("Cos x: %lf\n", y2);

	}
	else {
		printf("WRONG DATA!");
	}

}
